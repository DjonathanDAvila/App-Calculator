<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#CFCFCF">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_multiplicacao"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="*"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_CE"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="CE"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_C"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/button_apagar"
            android:layout_width="86dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_back"
            android:textSize="20sp"
            app:tint="#B3B2B2" />

        <Button
            android:id="@+id/button_sete"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_oito"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_nove"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_divisao"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_mais_quatro"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_cinco"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_seis"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_subtracao"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_um"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_dois"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_tres"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_adicao"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_mais_menos"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_zero"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_ponto"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_igual"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:backgroundTint="#D8D7D7"
            android:text="="
            android:textColor="@color/black"
            android:textSize="20sp" />


    </GridLayout>

    <TextView
        android:id="@+id/edit_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#CFCFCF"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        tools:hint="Resultado"
        android:textSize="64sp"
        android:textColor="@color/black"
        android:gravity="end"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/text_carregamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFCFCF"
        app:layout_constraintBottom_toTopOf="@+id/edit_resultado"
        tools:hint="Resultado"
        android:textSize="64sp"
        android:textColor="@color/black"
        android:gravity="end"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>